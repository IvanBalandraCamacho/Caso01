# =============================================================================
# TIVIT AI Hub - Backend Environment Variables
# =============================================================================
# Copia este archivo como .env y configura los valores

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=mysql+pymysql://admin:password@ia_mysql:3306/caso01_db

# =============================================================================
# REDIS
# =============================================================================
REDIS_HOST=ia_redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://ia_redis:6379/0

# =============================================================================
# QDRANT (Vector Database)
# =============================================================================
QDRANT_HOST=ia_qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=rfp_documents
QDRANT_URL=http://ia_qdrant:6333

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Genera una key segura con: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=hK7xnx0BJPIbjajanotecreas, cambiar el valor en producción

# =============================================================================
# GOOGLE CLOUD PLATFORM (GCP)
# =============================================================================

# ===== GEMINI API (REQUERIDO) =====
# Obtén tu API key en: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here

# ===== GEMINI 3 PRO - Generación de Documentos y Propuestas =====
# Thinking level: HIGH (razonamiento profundo)
# Temperature: 0 (determinístico, preciso)
# NO usa RAG - recibe documentos crudos directamente
GEMINI_PRO_MODEL=gemini-3-pro-preview
GEMINI_PRO_THINKING_LEVEL=HIGH
GEMINI_PRO_TEMPERATURE=0.0
GEMINI_PRO_MAX_TOKENS=65536

# ===== GEMINI 3 FLASH - Chat, CopilotKit, Tareas Generales =====
# Thinking level: MEDIUM (balance velocidad/razonamiento)
# Temperature: 1.5 (creativo)
# SÍ usa RAG para contexto de documentos
GEMINI_FLASH_MODEL=gemini-3-flash-preview
GEMINI_FLASH_THINKING_LEVEL=MEDIUM
GEMINI_FLASH_TEMPERATURE=1.5
GEMINI_FLASH_MAX_TOKENS=16384

# Legacy (compatibilidad con código antiguo)
GEMINI_MODEL=gemini-3-flash-preview
GEMINI_TEMPERATURE=1.5
GEMINI_MAX_TOKENS=16384

# ===== GCP PROJECT (Para Document AI y otros servicios) =====
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GCP_REGION=us-central1
GCS_BUCKET_NAME=your-bucket-name

# ===== DOCUMENT AI (Opcional - para OCR avanzado) =====
# GOOGLE_APPLICATION_CREDENTIALS=/app/gcp-service-account.json
# DOCUMENT_AI_PROCESSOR_ID=your-processor-id
# DOCUMENT_AI_LOCATION=us
# DOCUMENT_AI_ENABLED=true

# ===== NATURAL LANGUAGE API (Opcional) =====
ENABLE_NATURAL_LANGUAGE=false

# =============================================================================
# RAG SERVICE
# =============================================================================
RAG_SERVICE_URL=http://rag-service:8080
RAG_SERVICE_ENABLED=true
RAG_SERVICE_TIMEOUT=120.0

# =============================================================================
# MCP TALENT SERVICE (Opcional)
# =============================================================================
MCP_SERVICE_URL=https://mcp-tivit.eastus2.cloudapp.azure.com
MCP_SERVICE_ENABLED=true
MCP_SERVICE_TIMEOUT=30.0

# =============================================================================
# FILE UPLOAD
# =============================================================================
MAX_FILE_SIZE=52428800
ALLOWED_EXTENSIONS=.pdf,.docx,.xlsx,.csv,.txt

# =============================================================================
# CELERY (Background Tasks)
# =============================================================================
CELERY_BROKER_URL=redis://ia_redis:6379/0
CELERY_RESULT_BACKEND=redis://ia_redis:6379/0

# =============================================================================
# CORS
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
